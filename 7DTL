--chức năng 6
local playerESPEnabled = false
local playerESPThread = nil

-- XÓA ESP CŨ
local function clearPlayerESP()
	for _, plr in pairs(Players:GetPlayers()) do
		if plr ~= LocalPlayer and plr.Character then
			local hrp = plr.Character:FindFirstChild("HumanoidRootPart")
			if hrp then
				local existing = hrp:FindFirstChild("PlayerESP")
				if existing then
					existing:Destroy()
				end
			end
		end
	end
end

-- TẠO ESP CHO NGƯỜI CHƠI
local function createPlayerESP()
	for _, plr in pairs(Players:GetPlayers()) do
		if plr ~= LocalPlayer and plr.Character then
			local hrp = plr.Character:FindFirstChild("HumanoidRootPart")
			if hrp and not hrp:FindFirstChild("PlayerESP") then
				local esp = Instance.new("BillboardGui")
				esp.Name = "PlayerESP"
				esp.Adornee = hrp
				esp.Size = UDim2.new(0, 100, 0, 40)
				esp.AlwaysOnTop = true
				esp.Parent = hrp

				local label = Instance.new("TextLabel")
				label.Size = UDim2.new(1, 0, 1, 0)
				label.BackgroundTransparency = 1
				label.Text = plr.DisplayName
				label.TextColor3 = Color3.fromRGB(0, 170, 255)
				label.TextScaled = true
				label.Font = Enum.Font.GothamBold
				label.Parent = esp
			end
		end
	end
end

-- NÚT BẬT/TẮT TRONG ESP TAB
ESPTab:CreateToggle({
	Name = "Player ESP",
	CurrentValue = false,
	Callback = function(state)
		playerESPEnabled = state

		if state then
			playerESPThread = task.spawn(function()
				while playerESPEnabled do
					clearPlayerESP()
					createPlayerESP()
					task.wait(3)
				end
			end)
		else
			clearPlayerESP()
			if playerESPThread then
				task.cancel(playerESPThread)
				playerESPThread = nil
			end
		end
	end
})

--MiscTab
--chức năng 1
-- Hàm kích hoạt ProximityPrompt ngay khi người chơi chạm vào
local function autoTriggerProximityPrompt()
	for _, obj in pairs(workspace:GetChildren()) do
		if obj:FindFirstChild("ProximityPrompt") then
			local prompt = obj:FindFirstChild("ProximityPrompt")
			if prompt then
				-- Kích hoạt ProximityPrompt ngay lập tức khi người chơi gần đến nó
				fireproximityprompt(prompt)
			end
		end
	end
end

-- Nút bật/tắt trong MiscTab
-- Hàm kiểm tra và tự động kích hoạt ProximityPrompt khi người chơi click
local function autoClickProximityPrompt()
    -- Lấy người chơi hiện tại
    local player = game.Players.LocalPlayer
    local mouse = player:GetMouse()

    -- Kiểm tra nếu người chơi click vào các đối tượng có ProximityPrompt
    mouse.Button1Click:Connect(function()
        -- Kiểm tra đối tượng mà người chơi click vào
        local hit = mouse.Hit
        local obj = hit.Parent  -- Tìm đối tượng chứa ProximityPrompt (thường là một phần của model)

        -- Kiểm tra xem đối tượng có ProximityPrompt không
        local prompt = obj:FindFirstChild("ProximityPrompt")
        if prompt then
            -- Kích hoạt ProximityPrompt ngay lập tức
            fireproximityprompt(prompt)
        end
    end)
end

-- Nút bật/tắt trong MiscTab
MiscTab:CreateToggle({
	Name = "Auto Click ProximityPrompt",
	CurrentValue = false,
	Callback = function(state)
		if state then
			-- Kích hoạt sự kiện click tự động
			autoClickProximityPrompt()
		end
	end
})
