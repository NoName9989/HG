local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

local Window = Rayfield:CreateWindow({
   Name = "NN Hub Script List",
   LoadingTitle = "NN Hub",
   LoadingSubtitle = "Danh s√°ch script ch·ªçn l·ªçc",
   ConfigurationSaving = {
      Enabled = false,
   },
   KeySystem = false,
})

-- Tabs ri√™ng
local RunTab = Window:CreateTab("‚ñ∂Ô∏è Ch·∫°y Script", 4483362458)
local CopyTab = Window:CreateTab("üìã Sao Ch√©p Script", 4483362458)

-- Danh s√°ch scripts m·∫´u
local ScriptList = {
   {
      Name = "Infinite Yield",
      Script = "loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()",
      Icon = 4483362458, -- ID h√¨nh ·∫£nh t·ª´ Roblox (c√≥ th·ªÉ thay b·∫±ng ID kh√°c)
   },
   {
      Name = "Dark Dex",
      Script = "loadstring(game:HttpGet('https://gist.githubusercontent.com/iK4oS/1a6c1774c24ce333cce4bd947c87d8d7/raw/dex.lua'))()",
      Icon = 12222225, -- thay ID t√πy √Ω
   },
   {
      Name = "Simple Spy",
      Script = "loadstring(game:HttpGet('https://raw.githubusercontent.com/exxtremestuffs/SimpleSpySource/master/SimpleSpy.lua'))()",
      Icon = 8569322835,
   },
}

-- Ch·∫°y Script
RunTab:CreateSection("Ch·ªçn script ƒë·ªÉ ch·∫°y")

for _, data in ipairs(ScriptList) do
   RunTab:CreateButton({
      Name = data.Name,
      Image = data.Icon,
      Callback = function()
         loadstring(data.Script)()
      end,
   })
end

-- Sao ch√©p Script
CopyTab:CreateSection("Ch·ªçn script ƒë·ªÉ sao ch√©p")

for _, data in ipairs(ScriptList) do
   CopyTab:CreateButton({
      Name = data.Name,
      Image = data.Icon,
      Callback = function()
         setclipboard(data.Script)
         Rayfield:Notify({
            Title = "ƒê√£ sao ch√©p",
            Content = data.Name .. " ƒë√£ ƒë∆∞·ª£c sao ch√©p v√†o clipboard.",
            Duration = 4.5,
            Image = data.Icon,
            Actions = {
               OK = {
                  Name = "ƒê√≥ng",
                  Callback = function() end,
               },
            },
         })
      end,
   })
end

task.wait(1) -- ƒê·ª£i GUI load ho√†n to√†n

local screenGui = game:GetService("CoreGui"):FindFirstChild("Rayfield") or game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui"):FindFirstChild("Rayfield")
if screenGui then
   local main = screenGui:FindFirstChildWhichIsA("Frame", true)
   if main then
      -- T·∫°o n√∫t X
      local closeBtn = Instance.new("TextButton")
      closeBtn.Size = UDim2.new(0, 30, 0, 30)
      closeBtn.Position = UDim2.new(1, -35, 0, 5)
      closeBtn.AnchorPoint = Vector2.new(0.5, 0)
      closeBtn.Text = "X"
      closeBtn.Font = Enum.Font.GothamBold
      closeBtn.TextSize = 20
      closeBtn.TextColor3 = Color3.new(1, 1, 1)
      closeBtn.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
      closeBtn.BorderSizePixel = 0
      closeBtn.Name = "CloseButton"
      closeBtn.Parent = main
      closeBtn.ZIndex = 9999

      closeBtn.MouseButton1Click:Connect(function()
         screenGui:Destroy()
      end)

      -- Optional: Hover effect
      closeBtn.MouseEnter:Connect(function()
         closeBtn.BackgroundColor3 = Color3.fromRGB(200, 40, 40)
      end)
      closeBtn.MouseLeave:Connect(function()
         closeBtn.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
      end)
   end
end
